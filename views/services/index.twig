{% extends "../partials/layout.twig" %}
{% block links %}
    <link crossorigin="anonymous" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" rel="stylesheet">
    <link
    crossorigin="anonymous" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" rel="stylesheet">
    <!-- Stylesheet -->
    <link href="/stylesheets/style.css" rel="stylesheet">
{% endblock %}

{% block main %}

    <body>
        {% include "../partials/header.twig" %}
        <section class="section pricing bg-dark position-relative">
            <div class="bg-overlay h70"></div>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-7 text-center">
                        <div class="section-title">
                            <span class="h6 text-white">
                                Our
                                {{ heading }}</span>
                            <h2 class="mt-3 content-title text-white">No hidden Charges. Choose Your Service Below</h2>
                        </div>
                    </div>
                </div>

                <div class="row justify-content-center">
                    {% for service in services %}
                        <div class="col-md-4 mb-5">
                            <div class="card text-center mb-md-0 mb-3">
                                <div class="card-body py-5">
                                    <div class="pricing-header mb-3">
                                        <h5 class="font-weight-normal mb-3">{{ service.serviceName}}</h5>
                                        <h1 class="mt-4 mb-4">${{ service.price }}</h1>
                                        {% if service.serviceName == 'Carpet & Upholstery' %}
                                            <p class="text-muted">Price based on size of property</p>
                                        {% else %}
                                            <p class="text-muted">Prices are per Service</p>
                                        {% endif %}
                                    </div>
                                    <a class="btn btn-small btn-solid-border btn-round-full" {% if user %} href="users/{{user._id}}/appts/new" {% else %} href="/login" {% endif %}>Book Now!</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="container">
                <div class="rounded cta-block mt-5 p-5">
                    <div class="row justify-content-center align-items-center">
                        <div class="col-lg-7">
                            <span class="text-color">For every type of building or car</span>
                            <h2 class="mt-2 text-white">Entrust Your Cleaning to Our Team of Professionals</h2>
                        </div>
                        <div class="col-lg-4">
                            <a class="btn btn-main btn-round-full float-lg-right float-md-right float-sm-right" href="/">Contact Us</a>
                        </div>
                    </div>
                </div>
            </div>

        </section>
        {% include "../partials/footer.twig" %}</body>
</body></div>{% endblock %}{% block scripts %}{% endblock %}
