{% extends "../partials/layout.twig" %}
{% block content %}
    <form action="/ceo/services/{{ service._id }}?_method=PUT" autocomplete="off" class="user" method="POST">
        <div class="form-group row flex-column align-items-center">
            <div class="col-sm-4 mb-3">
                <input class="form-control form-control-user" name="serviceName" placeholder="{{ service.serviceName }}" type="text">
            </div>
            <div class="col-sm-4 mb-3">
                <input class="form-control form-control-user" name="price" placeholder="{{ service.price }}" type="number">
            </div>
            <div class="col-sm-4 mb-3">
                <select class="form-control form-control-range" name="duration">
                    <option value="1 hour">1 hour</option>
                    <option value="30 minutes">30 minutes</option>
                    <option value="2 hours">2 hours</option>
                    <option value="Custom">Custom</option>
                </select>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <button class="col-sm-4 btn btn-info btn-user btn-block" type="submit">Update Service</button>
        </div>
    </form>
{% endblock %}
